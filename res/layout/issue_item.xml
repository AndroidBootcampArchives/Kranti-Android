<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="75dp"
              android:background="#ade0ff" android:id="@+id/issue_item"
              android:paddingTop="2dp" android:paddingBottom="2dp"
              android:baselineAligned="true">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center">
        <TextView
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:text="New Text"
                android:id="@+id/title" android:layout_gravity="center" android:layout_weight="1"
                android:padding="2dp" android:gravity="center" android:textSize="15dp" android:textColor="#454545"
                android:inputType="textCapWords" android:maxLines="1" />
        <TextView
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:text="New Text"
                android:id="@+id/description" android:layout_gravity="center" android:layout_weight="2"
                android:gravity="center" android:padding="2dp" android:textSize="12dp" android:textColor="#454545"
                android:inputType="textMultiLine|textCapSentences" android:maxLines="2"/>
    </LinearLayout>
</LinearLayout>